<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="touristLine" namespace="/touristLine" extends="json-default, struts-default">

        <action name="addTouristLine" class="com.fz.travel.controller.TouristLineController" method="addTouristLine">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

        <action name="findTouristLineList" class="com.fz.travel.controller.TouristLineController" method="findTouristLineList">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

        <action name="removeTouristLine" class="com.fz.travel.controller.TouristLineController" method="removeTouristLine">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

        <action name="updateTouristLine" class="com.fz.travel.controller.TouristLineController" method="updateTouristLine">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

        <action name="findTouristLineListById" class="com.fz.travel.controller.TouristLineController" method="findTouristLineListById">
            <result name="success" type="redirect">
                <param name="location">../touristline_detail.jsp</param>
            </result>
        </action>

        <action name="findLineSceneryByTouristLineId" class="com.fz.travel.controller.TouristLineController" method="findLineSceneryByTouristLineId">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

        <action name="findTouristLineListByVisitorId" class="com.fz.travel.controller.TouristLineController" method="findTouristLineListByVisitorId">
            <result name="success" type="json">
                <param name="root">jsonResult</param>
            </result>
        </action>

    </package>
</struts>